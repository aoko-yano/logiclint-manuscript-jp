{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "logiclint-report",
  "type": "object",
  "required": ["source", "issues"],
  "additionalProperties": false,
  "properties": {
    "source": {
      "type": "string",
      "description": "Path to the source file (preferably relative to working directory)."
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "location", "claim_a", "claim_b", "why", "severity", "fix"],
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string" },
          "location": {
            "type": "object",
            "required": ["quote"],
            "additionalProperties": false,
            "properties": {
              "quote": { "type": "string" },
              "note": { "type": "string" }
            }
          },
          "claim_a": { "type": "string" },
          "claim_b": { "type": "string" },
          "why": { "type": "string" },
          "severity": { "type": "integer", "minimum": 1, "maximum": 5 },
          "fix": { "type": "string" }
        }
      }
    },
    "meta": {
      "type": "object",
      "description": "Optional metadata.",
      "additionalProperties": true
    }
  }
}

